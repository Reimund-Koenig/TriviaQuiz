<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/even_container"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/row_layout_info"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/row_layout_info_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="7sp"
            android:layout_marginStart="20sp"
            android:layout_marginEnd="20sp"
            android:textColor="@color/white"
            android:background="@color/quiz_2"/>
    </LinearLayout>
    <LinearLayout
        android:baselineAligned="false"
        android:id="@+id/row_layout_right"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:background="@color/transparent"
            android:orientation="horizontal"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="15">

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="85">
            <RelativeLayout
                android:background="@color/transparent"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:background="@color/transparent"
                    android:layout_width="350sp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="0sp">
                    <ImageView android:id="@+id/user_bubble_right"
                        android:contentDescription="@string/empty"
                        android:layout_height="100sp"
                        android:layout_width="350sp"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="5sp"
                        android:layout_marginBottom="5sp"
                        android:src="@drawable/bubble_right_f"/>
                    <TextView android:id="@+id/user_text_right"
                        android:layout_height="70sp"
                        android:layout_width="185sp"
                        android:layout_alignParentStart="true"
                        android:textColor="#ffffff"
                        android:textSize="16sp"
                        android:layout_marginTop="20sp"
                        android:layout_marginStart="10sp"/>
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:baselineAligned="false"
        android:id="@+id/row_layout_left"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="85">
            <RelativeLayout
                android:background="@color/transparent"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="350sp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="0sp">
                    <ImageView android:id="@+id/user_bubble_left"
                        android:contentDescription="@string/empty"
                        android:layout_height="100sp"
                        android:layout_width="350sp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="5dip"
                        android:layout_marginBottom="5dip"
                        android:src="@drawable/bubble_left_f"/>
                    <TextView android:id="@+id/user_name_left"
                        android:layout_height="22sp"
                        android:layout_width="185sp"
                        android:layout_alignParentEnd="true"
                        android:textColor="#ffffff"
                        android:textSize="12sp"
                        android:layout_marginTop="20sp"
                        android:layout_marginEnd="10sp"/>
                    <TextView android:id="@+id/user_text_left"
                        android:layout_height="52sp"
                        android:layout_width="185sp"
                        android:layout_alignParentEnd="true"
                        android:textColor="#ffffff"
                        android:textSize="16sp"
                        android:layout_marginTop="38sp"
                        android:layout_marginEnd="10sp"/>
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:background="@color/transparent"
            android:orientation="horizontal"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="15">

        </LinearLayout>
    </LinearLayout>


</RelativeLayout>